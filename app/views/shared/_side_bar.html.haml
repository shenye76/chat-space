.top
  .top__left
    = current_user.name
  .top__right
    =link_to new_group_path, class: "link" do
      = icon('fas', 'edit', class: "top__right__btn")
    =link_to edit_user_path(current_user) do
      = icon('fas', 'cog', class: "top__right__btn")

.middle
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "link" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message